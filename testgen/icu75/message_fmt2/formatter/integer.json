{
  "scenario": "Integer formatter",
  "defaultTestProperties": {
    "testSubtype": "formatter",
    "locale": "en-US"
  },
  "tests": [
    {
      "pattern": "hello {4.2 :integer}",
      "verify": "hello 4"
    },
    {
      "pattern": "hello {-4.20 :integer}",
      "verify": "hello -4"
    },
    {
      "pattern": "hello {0.42e+1 :integer}",
      "verify": "hello 4"
    },
    {
      "pattern": ".match {$foo :integer} one {{one}} * {{other}}",
      "args": [
        {
          "argType": "number",
          "name": "foo",
          "value": 1.2
        }
      ],
      "verify": "one"
    },
    {
      "pattern": ".match {$foo :integer} 1.2 {{=1.2}} one {{one}} * {{other}}",
      "args": [
        {
          "argType": "number",
          "name": "foo",
          "value": 1.2
        }
      ],
      "verify": "=1.2"
    },
    {
      "pattern": ".match {$foo :integer} 1.2 {{=1.2}} |1,2| {{=1,2}} * {{other}}",
      "locale": "fr",
      "args": [
        {
          "argType": "number",
          "name": "foo",
          "value": 1.2
        }
      ],
      "verify": "=1.2"
    }
  ]
}
