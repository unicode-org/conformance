{
  "scenario": "Input syntax",
  "description": "Syntax to describe expected args",
  "defaultTestProperties": {
    "testSubtype": "syntax",
    "locale": "en-US"
  },
  "tests": [
    {
      "description": "Includes input values in the output",
      "pattern": ".input {$foo} {{bar {$foo}}}",
      "args": [
        {
          "argType": "string",
          "name": "foo",
          "value": "foo"
        }
      ],
      "verify": "bar foo"
    },
    {
      "description": "Allows inputs as local placeholder values",
      "pattern": ".input {$foo} .local $bar = {$foo} {{bar {$bar}}}",
      "args": [
        {
          "argType": "string",
          "name": "foo",
          "value": "foo"
        }
      ],
      "verify": "bar foo"
    }
  ]
}
