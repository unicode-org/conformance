{
  "scenario": "Escapes",
  "description": "Handling of escaped characters",
  "defaultTestProperties": {
    "testSubtype": "syntax",
    "locale": "en-US"
  },
  "tests": [
    {
      "description": "Ignores character escapes",
      "pattern": "h\nel\rl\to",
      "verify": "hello"
    },
    {
      "description": "Ignores unicode escapes",
      "pattern": "hell\u3000o",
      "verify": "hello"
    }
  ]
}
