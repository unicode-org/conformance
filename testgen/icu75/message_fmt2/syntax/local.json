{
  "scenario": "Local syntax",
  "description": "Placeholders defined in the pattern",
  "defaultTestProperties": {
    "testSubtype": "syntax",
    "locale": "en-US"
  },
  "tests": [
    {
      "description": "Includes locals with unquoted literal values",
      "pattern": ".local $foo = {bar} {{bar {$foo}}}",
      "verify": "bar bar"
    },
    {
      "description": "Includes locals with quoted literal values",
      "pattern": ".local $foo = {|bar|} {{bar {$foo}}}",
      "verify": "bar bar"
    },
    {
      "description": "Overrides input values with local values",
      "pattern": ".local $foo = {bar} {{bar {$foo}}}",
      "args": [
        {
          "argType": "string",
          "name": "foo",
          "value": "foo"
        }
      ],
      "verify": "bar bar"
    },
    {
      "description": "Allows local values to reference input values",
      "pattern": ".local $foo = {$baz} .local $bar = {$foo} {{bar {$bar}}}",
      "args": [
        {
          "argType": "string",
          "name": "baz",
          "value": "foo"
        }
      ],
      "verify": "bar foo"
    },
    {
      "description": "Allows local values to reference other local values",
      "pattern": ".local $x = {42} .local $y = {$x} {{{$x} {$y}}}",
      "verify": "42 42"
    },
    {
      "description": "Allows local values to reference other local values that reference input values",
      "pattern": ".local $foo = {$baz} .local $bar = {$foo} {{bar {$bar}}}",
      "args": [
        {
          "argType": "string",
          "name": "baz",
          "value": "foo"
        }
      ],
      "verify": "bar foo"
    }
  ]
}
