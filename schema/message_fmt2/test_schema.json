{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "MessageFormat2 data-driven tests",
  "description": "This documents the format of message_fmt2 test data for execution.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "test_type",
    "tests"
  ],
  "properties": {
    "test_type": {
      "const": "message_fmt2"
    },
    "tests": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/test"
      },
      "minItems": 1
    }
  },
  "$defs": {
    "test": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "label",
        "test_description",
        "test_subtype",
        "locale",
        "pattern"
      ],
      "properties": {
        "label": {
          "type": "string",
          "description": "Identifier for the test."
        },
        "test_description": {
          "type": "string",
          "description": "Information about the test."
        },
        "test_subtype": {
          "description": "A tag for the executor to decide how to run the test.",
          "enum": [
            "syntax",
            "selector",
            "formatter"
          ]
        },
        "locale": {
          "type": "string"
        },
        "pattern": {
          "type": "string"
        },
        "args": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/arg"
          }
        }
      }
    },
    "arg": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "argType",
        "value"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "argType": {
          "enum": [
            "string",
            "number",
            "datetime"
          ]
        },
        "value": {}
      },
      "anyOf": [
        {
          "properties": {
            "argType": {
              "const": "string"
            },
            "value": {
              "type": "string"
            }
          }
        },
        {
          "properties": {
            "argType": {
              "const": "datetime"
            },
            "value": {
              "type": "string"
            }
          }
        },
        {
          "properties": {
            "argType": {
              "const": "number"
            },
            "value": {
              "type": "number"
            }
          }
        }
      ]
    }
  }
}
